<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StyleUs.View.ForgotPassword">
    <ContentPage.Content Orientation="Vertical" BackgroundColor="White" >
        <StackLayout Orientation="Vertical"  BackgroundColor="White">
            <StackLayout Orientation="Horizontal" Margin="0,50,0,50" HorizontalOptions="Center">
                <Label Text="Style " TextColor="Gray" FontSize="80" />
                <Label Text="US" TextColor="Red" FontSize="80" />
            </StackLayout>

            <Label Text="Forgot your password?" TextColor="Black" HorizontalOptions="Center"></Label>

            <Label Text="Enter your email below to receive your password reset instructions" Margin="20" HorizontalOptions="Center" HorizontalTextAlignment="Center"  TextColor="Gray" ></Label>
            <Entry Text="Email Address" TextColor="Gray" Margin="30" ></Entry>
            <Button Text="Send" Clicked=""></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>